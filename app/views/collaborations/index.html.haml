%ul#collaborations.nav.nav-tabs
  %li.active
    %a{"data-toggle" => "tab", :href => "#list"} 
      = t('collaborator.list')
  %li
    %a{"data-toggle" => "tab", :href => "#invite"} 
      = t('collaborator.invite')

.tab-content
  #list.tab-pane.active
    = render 'collaborations/list'
  #invite.tab-pane
    = form_tag @collaborator, remote: false do |f|
      .control-group
        = label_tag :email, t('user.email'), :class => 'control-label'
        .controls  
          = text_field_tag :email
      
      .form-actions
        = submit_tag t('collaborator.add'), :class => 'btn-success btn-large'

