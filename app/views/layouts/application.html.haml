!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Ordinem"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar 
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Ordinem
          .container.nav-collapse
            %ul.nav
              - if user_signed_in?
                .btn-group  

                  %a.btn.btn-primary.btn-header.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    %i.icon-book
                    Projects
                    %span.caret
                  %ul.dropdown-menu
                    %li 
                      %a{:href => "#"}
                        %i.icon-chevron-right
                        project 1  
                    %li 
                      %a{:href => "#"}
                        
                        project 2
                        
                          
                    %li.divider
                    %li
                      %a{:href => "#"}
                        %i.icon-plus
                        Add new project
            %ul.nav.pull-right.btn-toolbar
              - if user_signed_in?
                .btn-group  

                  %a.btn.btn-primary.btn-header.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    %i.icon-user
                    = current_user.email
                    %span.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => edit_user_registration_path}
                        %i.icon-user
                        Profile
                    %li.divider
                    %li 
                      -# %i.icon-off
                      -# = link_to "Sign Out", destroy_user_session_path, :method => :delete 
                      %a{:href => destroy_user_session_path, "data-method" => "delete"}
                        %i.icon-off
                        Sign Out                  
              - else
                %li#fat-menu.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Login
                    %b.caret
                  %ul.dropdown-menu#loginForm
                    %li.span3.form-horizontal 
                      = form_tag user_session_path do
                        .control-group
                          = label_tag 'user[email]', 'Email'
                          = text_field_tag 'user[email]'
                        .control-group
                          = label_tag 'user[password]', 'Password'
                          
                          = password_field_tag 'user[password]'
                        = check_box_tag 'user[remember_me]'
                        = label_tag 'user[remember_me]', 'Remember me'
                        %button.btn.btn-primary Sign in
                        = link_to " (Forgot your password?)", new_password_path('user')
                        = link_to "Register new user", new_user_registration_path
                    -# = render 'devise/sessions/new'    
                    -# = link_to "Sign In", new_user_session_path
                   

    .container
      .content
        .row
          .span12
            = yield
          /
            .span9
              
            .span3
              .well.sidebar-nav
                %h3 Sidebar
                %ul.nav.nav-list
                  %li.nav-header Sidebar
                  %li= link_to "Link 1", "/path1"
                  %li= link_to "Link 2", "/path2"
                  %li= link_to "Link 3", "/path3"
    
      %footer
        %p.pull-right &copy; 2012 Bohdan Shevchuk
        %p
          All right reserved.
        %p
          = link_to "About", "/about"
          |
          = link_to "Licence", "/licence"
          |
          = link_to "Help", "/help"


    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

